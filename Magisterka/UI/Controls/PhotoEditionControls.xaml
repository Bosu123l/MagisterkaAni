<UserControl x:Class="UI.PhotoEditionControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI"
             mc:Ignorable="d" 
             d:DesignWidth="70">
    <UserControl.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource OpacityMenuButton}"/>
    </UserControl.Resources>
    <UserControl.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform CenterY="0.5" CenterX="0.5"/>
                    <RotateTransform Angle="270" CenterY="0.5" CenterX="0.5"/>
                    <TranslateTransform/>
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FF6B95BF" Offset="0.614"/>
            <GradientStop Color="#0099B4D1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <StackPanel>
        <Expander Header="Edit" FontSize="14" FontWeight="SemiBold" IsExpanded="True">
            <StackPanel Orientation="Vertical">
                <Button Command="{Binding GetPhotoFromScannerClickedCommand, ElementName=userControl, Mode=OneWay}" 
                x:Name="_dustReduction"  
                ToolTip="Dust reduction">
                    <Button.OpacityMask>
                        <ImageBrush ImageSource="/UI;component/Icons/icons8-mop-100.png"/>
                    </Button.OpacityMask>
                </Button>
                <Button Command="{Binding GetPhotoFromScannerClickedCommand, ElementName=userControl, Mode=OneWay}" 
                x:Name="_smudgeCleaner"                
                ToolTip="Clear smudges">
                    <Button.OpacityMask>
                        <ImageBrush ImageSource="/UI;component/Icons/erase.png"/>
                    </Button.OpacityMask>
                </Button>
                <Button Command="{Binding GetPhotoFromScannerClickedCommand, ElementName=userControl, Mode=OneWay}" 
                x:Name="_cutPhoto"                 
                ToolTip="Cut photo">
                    <Button.OpacityMask>
                        <ImageBrush ImageSource="/UI;component/Icons/icons8-crop-96.png"/>
                    </Button.OpacityMask>
                </Button>
                <Button 
            Margin="5"
            Command="{Binding GetPhotoFromScannerClickedCommand, ElementName=userControl, Mode=OneWay}" 
            x:Name="_cutPhoto_Copy"
            ToolTip="Cut photo">
                    <Button.OpacityMask>
                        <ImageBrush ImageSource="/UI;component/Icons/rotate-left.png"/>
                    </Button.OpacityMask>
                </Button>
                <Button Command="{Binding GetPhotoFromScannerClickedCommand, ElementName=userControl, Mode=OneWay}" 
                x:Name="_cutPhoto_Copy1"
                ToolTip="Cut photo">
                    <Button.OpacityMask>
                        <ImageBrush ImageSource="/UI;component/Icons/rotate-right.png"/>
                    </Button.OpacityMask>
                </Button>
            </StackPanel>
        </Expander>
    </StackPanel>    
</UserControl>
