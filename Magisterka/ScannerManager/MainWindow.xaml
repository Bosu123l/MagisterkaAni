<Window x:Name="window" x:Class="ScannerManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowStyle="None">
    <Grid>
        <ListView x:Name="_scannersListPreview" Margin="0,0,10,0" ItemsSource="{Binding Scanners, ElementName=window}" SelectionChanged="_scannersListPreview_SelectionChanged" SelectedItem="{Binding SelectedScanner, ElementName=window}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Urządzenie"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
